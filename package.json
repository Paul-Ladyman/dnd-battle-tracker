{
  "name": "dnd-battle-tracker",
  "version": "5.9.1",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@aws-sdk/client-cognito-identity": "^3.121.0",
    "aws-appsync-auth-link": "^3.0.6",
    "aws-appsync-subscription-link": "3.1.0",
    "file-saver": "^2.0.5",
    "graphql": "^16.5.0",
    "is-hotkey": "^0.2.0",
    "nanoid": "^3.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "subscriptions-transport-ws": "^0.11.0"
  },
  "scripts": {
    "start": "npm run build:index && webpack serve --mode development --env development",
    "build": "npm ci && npm run build:index && npm run build:react && npm run build:bundle:html",
    "build:react": "webpack --mode production",
    "build:bundle:html": "node ./scripts/bundle-html.js",
    "build:index": "node ./scripts/create-index.js",
    "start:ci": "node ./test/appServer.js",
    "test": "jest --watch --testPathIgnorePatterns=/test/e2e.spec.js",
    "test:ci": "npx jest --testPathIgnorePatterns=/test/e2e.spec.js",
    "test:e2e": "npx playwright test",
    "lint": "npx eslint --ext js,jsx src",
    "size": "npm run build && size-limit"
  },
  "size-limit": [
    {
      "limit": "293 kb",
      "path": "dist/dnd-battle-tracker.html"
    }
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": ["/node_modules/(?!(uuid|nanoid)/)"]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@playwright/test": "^1.23.1",
    "@size-limit/preset-app": "^4.9.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.1",
    "html-loader": "^3.1.2",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "mini-css-extract-plugin": "^2.6.1",
    "mustache": "^4.2.0",
    "size-limit": "^4.9.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
