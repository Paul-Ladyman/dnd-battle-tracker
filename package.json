{
  "name": "dnd-battle-tracker",
  "version": "5.7.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.20",
    "@aws-sdk/client-cognito-identity": "^3.18.0",
    "aws-appsync-auth-link": "^3.0.4",
    "aws-appsync-subscription-link": "3.0.4",
    "file-saver": "^2.0.5",
    "graphql": "^15.5.0",
    "is-hotkey": "^0.2.0",
    "nanoid": "^3.1.23",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "subscriptions-transport-ws": "^0.9.18"
  },
  "scripts": {
    "start": "npm run build:index && webpack serve --mode development --env development",
    "build": "npm ci && npm run build:index && npm run build:react && npm run build:bundle:html",
    "build:react": "webpack --mode production",
    "build:bundle:html": "node ./scripts/bundle-html.js",
    "build:index": "node ./scripts/create-index.js",
    "test": "npx jest --watch",
    "test:ci": "npx jest",
    "lint": "npx eslint --ext js,jsx src",
    "size": "npm run build && size-limit"
  },
  "size-limit": [
    {
      "limit": "270 kb",
      "path": "dist/dnd-battle-tracker.html"
    }
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@size-limit/preset-app": "^4.9.1",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "css-minimizer-webpack-plugin": "^3.0.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^27.0.4",
    "mini-css-extract-plugin": "^1.6.0",
    "mustache": "^4.2.0",
    "size-limit": "^4.9.1",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  }
}
